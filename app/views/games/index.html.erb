<% provide(:title, @page_header) %>
<ol class="breadcrumb">
  <%= render_breadcrumbs :tag => :li, :separator => "" %>
</ol>

<div class="page-header">
  <h3><%= @page_header %></h3>
</div>

<% @games.in_groups_of(4,false) do |slice| %>
  <div class="row">
    <% slice.each do |game| %>
    <div class="col-md-3">
      <div class="panel panel-default">
        <div class="panel-body">
          <%= link_to image_tag(game.screen.url(:medium)), game_url(game), class: "thumbnail" %>
          <h6><%= game.title %></h6>
          <%= rating_for game, "rating", disable_after_rate: true %>
          <hr></hr>
          <%= link_to "GRAJ", game_url(game), class: "btn btn-primary" %>
        </div>
        <div class="panel-footer">
          Kategoria: <%= link_to game.category.short_name, category_url(game.category) %>
        </div>
      </div>
    </div>
    <% end%>
  </div>
<% end %>