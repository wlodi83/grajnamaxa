<%= form_for [@game, @comment], html: { class: "form-horizontal" } do |f| %>
  <%= f.hidden_field :parent_id %>
  <% if @comment.errors.any? %>
    <%= render 'layouts/errors', object: @comment %>
  <% end %>
  <% if !user_signed_in? %>
  <div class="form-group">
    <label for="inputAuthor" class="col-sm-2 control-label">Imię/Nick</label>
    <div class="col-sm-10">
      <%= f.text_field :author, class: "form-control", placeholder: "wpisz swoje imię lub nick", presence: true %>
    </div>
  </div>
  <% end %>
  <div class="form-group">
    <label for="inputBody" class="col-sm-2 control-label">Treść komentarza</label>
    <div class="col-sm-10">
      <%= f.text_area :body, rows: 6, autofocus: true, class: "form-control", placeholder: "wpisz treść komentarza", presence: true %>
    </div>
  </div>
  <div class="form-group">
    <label for="inputCaptcha" class="col-sm-2 control-label">Captcha</label>
    <div class="col-sm-10">
      <%= recaptcha_tags %>
    </div>
  </div>
  <hr></hr>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  </div>
<% end %>