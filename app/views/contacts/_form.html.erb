<%= form_for @contact, html: { multipart: true, class: "form-horizontal" } do |f| %>
  <% if @contact.errors.any? %>
    <%= render 'layouts/errors', object: @contact %>
  <% end %>

  <div class="form-group">
    <label for="inputUsername" class="col-sm-2 control-label">Twoje Imię</label>
    <div class="col-sm-10">
      <%= f.text_field :name, autofocus: true, class: "form-control", placeholder: "wpisz swoje imię" %>
    </div>
  </div>
  <div class="hide">
      <%= f.text_field :nickname, class: "form-control", placeholder: "wpisz swój nick" %>
  </div>
  <div class="form-group">
    <label for="inputEmail" class="col-sm-2 control-label">E-Mail</label>
    <div class="col-sm-10">
      <%= f.email_field :email, class: "form-control", placeholder: "wpisz swój adres e-mail" %>
    </div>
  </div>
  <div class="form-group">
    <label for="inputUsername" class="col-sm-2 control-label">Treść wiadomości</label>
    <div class="col-sm-10">
      <%= f.text_area :message, class: "form-control", placeholder: "wpisz tutaj treść swojej wiadomości", rows: 10 %>
    </div>
  </div>
  <hr></hr>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit "Wyślij", class: "btn btn-primary" %>
    </div>
  </div>
<% end %>