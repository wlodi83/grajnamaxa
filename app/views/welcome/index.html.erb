<div class="row">
<% if !user_signed_in? %>
<!-- Modal -->
<div class="modal fade" id="facebookModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">Polub Graj Na Maxa na Facebook'u</h4>
      </div>
      <div class="modal-body">
        <div class="text-center">
        <div class="fb-like-box" data-href="https://www.facebook.com/pages/Graj-Na-Maxa/807252712639800?ref=bookmarks" data-colorscheme="light" data-show-faces="true" data-header="false" data-stream="false" data-show-border="true"></div>
        </div>
        <hr/>
        <h4>Połącz się z serwisem za pomocą:</h4>
        <br/>
        <div class="text-center">
        <div class="btn-group-vertical" role="group" aria-label="...">
          <%= link_to(user_omniauth_authorize_path(:facebook), class: "btn btn-block btn-social btn-lg btn-facebook") do %>
            Facebook'a <i class="fa fa-facebook"></i>
          <% end %>
          <br/>
          <%= link_to(user_omniauth_authorize_path(:twitter), class: "btn btn-block btn-social btn-lg btn-twitter") do %>
            Twitter'a <i class="fa fa-twitter"></i>
          <% end %>
        </div>
        <div class="btn-group-vertical" role="group" aria-label="...">
          <%= link_to(user_omniauth_authorize_path(:google_oauth2), class: "btn btn-block btn-social btn-lg btn-google-plus") do %>
            Google'a <i class="fa fa-google-plus"></i>
          <% end %>
          <br/>
          <%= link_to(user_omniauth_authorize_path(:nk), class: "btn btn-block btn-social btn-lg btn-vk") do %>
            Nasza Klasa
          <% end %>
         </div>
       </div>
      </div>
    </div>
  </div>
</div>
<% end %>
<div class="col-md-8">
  <div id="carousel_grajnamaxa" class="carousel slide" data-ride="carousel">
  <!-- Indicators -->
  <ol class="carousel-indicators">
    <li data-target="#carousel_grajnamaxa" data-slide-to="0" class="active"></li>
    <li data-target="#carousel_grajnamaxa" data-slide-to="1"></li>
    <li data-target="#carousel_grajnamaxa" data-slide-to="2"></li>
    <li data-target="#carousel_grajnamaxa" data-slide-to="3"></li>
    <li data-target="#carousel_grajnamaxa" data-slide-to="4"></li>
  </ol>
  <!-- Wrapper for slides -->
  <div class="carousel-inner" role="listbox">
    <% @new_games.each_with_index do |game, index| %>
      <% if index  == 0 %>
        <div class="item active">
          <%= link_to image_tag(game.screen.url(:normal), style: 'width: 100%'), game_path(game) %>
          <div class="carousel-caption" style="background-color: #6D7B8D">
            <h3><b><%= link_to game.title, game_path(game), style: "color:white;" %></b></h3>
          </div>
        </div>
      <% else %>
        <div class="item">
          <%= link_to image_tag(game.screen.url(:normal), style: 'width: 100%'), game_path(game) %>
          <div class="carousel-caption" style="background-color: #6D7B8D">
            <h3><b><%= link_to game.title, game_path(game), style: "color:white;" %></b></h3>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>

  <!-- Controls -->
  <a class="left carousel-control" href="#carousel_grajnamaxa" role="button" data-slide="prev">
    <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
    <span class="sr-only">Wstecz</span>
  </a>
  <a class="right carousel-control" href="#carousel_grajnamaxa" role="button" data-slide="next">
    <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
    <span class="sr-only">Następny</span>
  </a>
</div>
<br />
</div>
