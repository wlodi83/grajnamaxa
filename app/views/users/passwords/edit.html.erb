<div class="page-header">
  <h4>Zmien swoje has≈Ço</h4>
</div>
<div class="well">
<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: "form-horizontal" }) do |f| %>
  <%= devise_error_messages! %>
  <%= f.hidden_field :reset_password_token %>
  <div class="form-group">
    <label for="inputPassword" class="col-sm-2 control-label">Nowe Haslo</label>
    <div class="col-sm-10">
      <%= f.password_field :password, autofocus: true, autocomplete: "off", class: "form-control", placeholder: "wpisz swoje nowe haslo" %>
    <span id="helpBlock" class="help-block">
      <% if @validatable %>(<%= @minimum_password_length %> znakow minimum)<% end %>
    </span>
    </div>
  </div>
  <div class="form-group">
    <label for="inputPasswordConfirmation" class="col-sm-2 control-label">Potwierdz nowe haslo</label>
    <div class="col-sm-10">
      <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", placeholder: "potwierdz swoje nowe haslo" %>
    </div>
  </div>
  <hr></hr>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit "Zmien haslo", class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
<div class="page-header"></div>
<%= render "users/shared/links" %>
</div>