<%= form_for @category, html: { multipart: true, class: "form-horizontal" } do |f| %>
  <% if @category.errors.any? %>
    <%= render 'layouts/errors', object: @category %>
  <% end %>

  <div class="form-group">
    <label for="inputName" class="col-sm-2 control-label">Nazwa Kategorii</label>
    <div class="col-sm-10">
      <%= f.text_field :name, autofocus: true, class: "form-control", placeholder: "wpisz nazwe kategorii" %>
    </div>
  </div>
  <div class="form-group">
    <label for="inputShortName" class="col-sm-2 control-label">Skrot Nazwy Kategorii</label>
    <div class="col-sm-10">
      <%= f.text_field :short_name, class: "form-control", placeholder: "wpisz skrocona nazwe kategorii" %>
    </div>
  </div>
  <hr></hr>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  </div>
<% end %>